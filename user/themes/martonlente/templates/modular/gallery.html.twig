{% block content %}
  <div class="pb-3 row">
    <div class="col-1"></div>
    <div class="col-10">
      <div class="row">
        {% for image in page.header.images %}
          {% set caption = image.caption %}
          {% set description = image.description %}
          {% set shadow = image.shadow %}
          {% if image.wide == 1 %}
            <figure class="col-12 pb-2">
              <img alt="{{ description }}" class="d-block w-100 {% if shadow %}shadow{% endif %}" src="{% if page.media[image.image].width >= 1920 %}{{ page.media[image.image].resize(1920).url|e }}{% else %}{{ page.media[image.image].url|e }}{% endif %}">
              {% if caption %}
                <figcaption>{{ caption|e }}</figcaption>
              {% endif %}
            </figure>
          {% else %}
            <figure class="col-6 pb-2">
              <img alt="{{ description }}" class="d-block w-100 {% if shadow %}shadow{% endif %}" src="{{ page.media[image.image].resize(1072).url|e }}">
              {% if caption %}
              <figcaption>{{ caption|e }}</figcaption>
              {% endif %}
            </figure>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    <div class="col-1"></div>
  </div>
{% endblock %}
