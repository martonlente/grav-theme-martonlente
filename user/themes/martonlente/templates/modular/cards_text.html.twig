{% block content %}
<div>
  <div class="container">
    <div class="pb-6 row">
      {% for card in page.header.cards %}
      <div class="col-4 col-6-md col-12-xs pb-4">
        <button class="align-items-center bg-transparent border-0 d-flex js-btn-card-text mb-2">
          <h3 class="grey-60 text-start mb-0 me-1">{{ card.header|e }} <span class="js-btn-card-text-toggle">+</span></h3>
        </button>
        <p class="grey-60 h-0 js-card-text-txt mb-3 opacity-0 overflow-y-hidden">{{ card.text|e }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
