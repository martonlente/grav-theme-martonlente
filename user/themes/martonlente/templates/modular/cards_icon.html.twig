{% block content %}
  <section>
    <div class="container">
      <div class="row pb-3">
        {% for card in page.header.cards %}
          <div class="col-6 mb-6">
            <div class="row">
              <div class="col-2"></div>
              <div class="col-10">
                <img alt="" class="fill-grey-60 h-8 js-svg-injector-item" src="{{ page.media[card.icon].url|e }}">
                <h2 class="fs-1 mb-3">{{ card.header|e }}</h2>
                <p class="mb-3">{{ card.text|e }}</p>
                <ul class="mb-3">
                  {% for service in card.services %}
                    <li class="d-inline-block grey-60 text-delimiter text-nowrap">{{ service.service|e }}</li>
                  {% endfor %}
                </ul>
                {% if card.link %}
                  <a class="align-items-center d-flex" href="{{ card.link|e }}"><span class="me-1">Read more</span><img alt="" class="fill-secondary h-2 js-svg-injector-item" src="{{ url('theme://images/ic_fluent_arrow_right_24_filled.svg') }}"></a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
