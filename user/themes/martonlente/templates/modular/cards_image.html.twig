{% block content %}
  <section>
    <div class="container pb-6">
      <div class="pb-5 row">
        <div class="col-1"></div>
        <div class="col-10">
          <h3>{{ page.header.header|e }}</h3>
        </div>
        <div class="col-1"></div>
      </div>
      <div class="row">
        {% for card in page.header.cards %}
          <a class="col-6 mb-3" href="{{ card.link|e }}">
            <div class="mb-3 row">
              <div class="col-10">
                <div class="bg-center bg-cover {{ card.image_ratio|e }}" style="background-image: url('{{ page.media[card.image].url|e }}');"></div>
              </div>
              <div class="col-2"></div>
            </div>
            <div class="row">
              <div class="col-2"></div>
              <div class="col-8">
                <h4 class="fs-3 mb-3 mh-8" {% if card.header_colour %} style="color: {{ card.header_colour|e }};" {% endif %}>{{ card.header|e }}</h4>
                <ul class="mb-3 mh-6">
                  {% for service in card.services %}
                    <li class="d-inline-block grey-60 text-delimiter text-nowrap">{{ service.text|e }}</li>
                  {% endfor %}
                </ul>
              </div>
              <div class="col-2"></div>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
