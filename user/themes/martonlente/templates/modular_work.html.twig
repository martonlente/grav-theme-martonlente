{% extends 'partials/base.html.twig' %}

{% block hero %}
  {% include 'partials/hero.html.twig' %}
{% endblock %}
{% block content %}
  <section>
    <div class="container pb-5">
      <div class="row">
        <div class="col-3">
          <h3 class="grey-60 mb-3">Client</h3>
          <div>{{ page.header.client|e }}</div>
        </div>
        <div class="col-3">
          <h3 class="grey-60 mb-3">Designer</h3>
          <div>{{ page.header.designer|e }}</div>
        </div>
        <div class="col-3">
          <h3 class="grey-60 mb-3">Developer</h3>
          <div>{{ page.header.developer|e }}</div>
        </div>
        <div class="col-3">
          <h3 class="grey-60 mb-3">Services</h3>
          <ul>
            {% for service in page.header.services %}
              <li class="list-style-none">{{ service.service|e }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </section>
  {% include 'partials/modular_item.html.twig' %}
{% endblock %}
