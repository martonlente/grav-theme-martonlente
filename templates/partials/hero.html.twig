{% set page_parent = page.parent.slug %}
<section class="border-bottom hero mb-6">
  <div class="d-flex flex-column h-40-xs h-54 justify-content-center">
    <div class="container position-relative">
      <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
          <div class="font-sans-serif-2 fs-7 letter-spacing-lg mb-3 text-uppercase">
            {% if page_parent == 'blog' %}
              Blog â€” {{ page.date|date("Y. m. d.")|e }}
            {% elseif page_parent == 'work' %}
              Work â€” Year: {% if page.header.date_display %} {{ page.header.date_display|e }} {% else %} {{ page.date|date("Y")|e }} {% endif %}
            {% else %}
              {{ page.header.hero_title|e }}
            {% endif %}
          </div>
          {% if page_parent == 'blog' or page_parent == 'work' %}
            <h1 class="fs-2-sm fs-3-xs mb-2">{{ page.title|e }}</h1>
          {% else %}
            <h1 class="fs-2-sm fs-3-xs mb-0">{{ page.header.hero_text|markdown|striptags('<strong>')|raw }}</h1>
          {% endif %}
          {% if page_parent == 'blog' %}
            <h2 class="fs-3-sm fs-4-xs grey-60 mb-0-md mb-2">{{ page.header.subtitle|e }}</h2>
          {% elseif page_parent == 'work' %}
            <p class="fs-5 fs-6-sm grey-60">{{ page.header.excerpt|e }}</p>
          {% endif %}
          {% if page.taxonomy.tag %}
            <div class="d-none-md">
              {% for tag in page.taxonomy.tag %}
                <span class="fs-5 fs-6-sm grey-60 text-delimiter text-nowrap">{{ tag|e }}</span>
              {% endfor %}
            </div>
          {% endif %}
        </div>
        <div class="col-1"></div>
      </div>
    </div>
  </div>
</section>
