{% set images_first = page.media.images|first %}
{% set images_open_graph = page.media[page.header.open_graph_image] %}
{% for meta in page.metadata %}
    <meta {% if meta.name %}name="{{ meta.name|e }}" {% endif %}{% if meta.http_equiv %}http-equiv="{{ meta.http_equiv|e }}" {% endif %}{% if meta.charset %}charset="{{ meta.charset|e }}" {% endif %}{% if meta.property %}property="{{ meta.property|e }}" {% endif %}{% if meta.content %}content="{{ meta.content|raw }}" {% endif %}/>
{% endfor %}
<meta property="og:title" content="{{ page.title|e }}" />
<meta property="og:image" content="{% if images_open_graph %}{{ images_open_graph.resize(1200).url|e }}{% else %}{{ images_first.resize(1200).url|e }}{% endif %}" />
<meta property="og:url" content="{{ page.url(true)|e }}" />
