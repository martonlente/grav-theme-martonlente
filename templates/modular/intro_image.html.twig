{% set divider = page.header.divider %}
{% set images_first = page.media.images|first %}
{% block content %}
  <section class="pt-9 {% if divider == 1 %}border-bottom pb-9{% else %}pb-7{% endif %}">
    <div class="h-3"></div>
    <div class="container">
      <div class="row">
        <div class="col-6 mb-4-sm">
          <h2 class="fs-1 mb-2">{{ page.header.heading|e }}</h2>
          <div class="content-modular fs-3">
            {{ page.content|raw }}
          </div>
        </div>
        {% if images_first %}
          <div class="col-1"></div>
          <div class="col-3 col-6-md">
            <img class="w-100" src="{% if images_first.width >= 596 %}{{ images_first.resize(596).url|e }}{% else %}{{ images_first.url|e }}{% endif %}">
          <div class="col-2"></div>
        {% endif %}
      </div>
      <div class="h-2"></div>
    </div>
  </section>
{% endblock %}
